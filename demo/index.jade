doctype html
html(lang='en')
   head
      title API Document
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      link(rel='stylesheet', href='build/main.css')
      link(rel='stylesheet', href='output/scss/index.css')

   body(data-spy='scroll', data-target='#myScrollspy', data-offset='20')
      .container
         .row
            .col-md-3
               nav#myScrollspy
                  ul.nav.pills.stacked
                     li.active
                        a(href='#buttons') Buttons
                        ul.childHide
                           li
                              a(href='#button-color') Button color
                           li
                              a(href='#button-size') Button size
                           li
                              a(href='#disabled-state') Disabled state
                           li
                              a(href='#button-dropdowns') Button dropdowns
                     li
                        a(href='#color') Color

                     li
                        a(href='#panels') Panels
                        ul.childHide
                           li
                              a(href="#basic-panels") Basic panels
                           li
                              a(href="#panel-heading") Panel with heading
                           li
                              a(href="#panel-footer") Panel with footer
                           li
                              a(href="#alternatives") Contextual alternatives
                           li
                              a(href="#panel-table") With tables
                           li
                              a(href="#panel-group") With list groups

                     li
                        a(href='#tables') Tables
                        ul.childHide
                           li
                              a(href='#base-tables') Base Tables
                           li
                              a(href='#tables-details') Tables details

                  div.modal-footer
                     a(href='#') Back to top
            .col-md-9
               #buttons
                  include docSrc/button

               #color
                  include docSrc/color

               #panels
                  include docSrc/panels

               #tables
                  include docSrc/tables



      script(type='text/javascript' src='output/bower_components/jQuery/dist/jquery.js')
      script(type='text/javascript' src='output/bower_components/bootstrap/dist/js/bootstrap.js')

