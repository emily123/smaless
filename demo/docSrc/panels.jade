      .panel-body Panel content
   .panel.panel-success
      .panel-heading
         .panel-title Panel title
      .panel-body Panel content
   .panel.panel-info
      .panel-heading
         .panel-title Panel title
      .panel-body Panel content
   .panel.panel-warning
      .panel-heading
         .panel-title Panel title
      .panel-body Panel content
   .panel.panel-danger
      .panel-heading
         .panel-title Panel title
      .panel-body Panel content
.highlight
